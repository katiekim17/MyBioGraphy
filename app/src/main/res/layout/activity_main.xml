<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="100sp"
            android:weightSum="8">

            <TextView
                android:id="@+id/mainNameDisp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|fill_horizontal|center_vertical|fill_vertical"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:text="님환영합니다"
                android:textSize="24sp" />

            <Button
                android:id="@+id/logOutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:text="LogOut" />
        </LinearLayout>

        <Button
            android:id="@+id/calBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Calendar"></Button>

        <Button
            android:id="@+id/weeklyBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Weekly"></Button>

        <!--    <Button-->
        <!--        android:id="@+id/googleTimerBtn"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="50dp"-->
        <!--        android:text="GoogleTimer"></Button>-->

        <!--    <Button-->
        <!--        android:id="@+id/reportBtn"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="50dp"-->
        <!--        android:text="Report"></Button>-->

        <Button
            android:id="@+id/dayBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Day"></Button>

        <Button
            android:id="@+id/memoBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Memo"></Button>

        <!--    <Button-->
        <!--        android:id="@+id/diaryBtn"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="50dp"-->
        <!--        android:text="Diary"></Button>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobListBannerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="다가오는 일정"
                android:textSize="16sp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/jobListViewPager"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>